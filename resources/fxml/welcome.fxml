<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.fishingadventure.controller.WelcomeController"
           prefWidth="1280" prefHeight="720">
    
    <!-- Animated GIF Background -->
    <ImageView fx:id="gifBackground" fitWidth="1280" fitHeight="720" preserveRatio="false"/>
    
    <!-- Login/Register Panel (Centered) -->
    <VBox alignment="CENTER" styleClass="login-panel" spacing="25" maxWidth="450" maxHeight="550">
        <padding>
            <Insets top="40" right="50" bottom="40" left="50"/>
        </padding>
        
        <!-- Title -->
        <Label text="ðŸŽ£ Fishing Adventure" styleClass="login-title"/>
        
        <!-- Tab Pane for Login/Register -->
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" styleClass="tab-pane">
            
            <!-- Login Tab -->
            <Tab text="Login">
                <VBox spacing="20" alignment="CENTER" style="-fx-padding: 30 20 20 20;">
                    
                    <Label text="Welcome back!" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
                    
                    <VBox spacing="10">
                        <Label text="Username" styleClass="field-label"/>
                        <TextField fx:id="loginUsernameField" promptText="Enter username" styleClass="custom-text-field"/>
                    </VBox>
                    
                    <VBox spacing="10">
                        <Label text="Password" styleClass="field-label"/>
                        <PasswordField fx:id="loginPasswordField" promptText="Enter password" styleClass="custom-text-field"/>
                    </VBox>
                    
                    <Label fx:id="loginErrorLabel" styleClass="error-label" wrapText="true"/>
                    
                    <Button text="Login" onAction="#handleLogin" styleClass="primary-button" prefWidth="200"/>
                    
                </VBox>
            </Tab>
            
            <!-- Register Tab -->
            <Tab text="Register">
                <VBox spacing="20" alignment="CENTER" style="-fx-padding: 30 20 20 20;">
                    
                    <Label text="Create new account" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
                    
                    <VBox spacing="10">
                        <Label text="Username" styleClass="field-label"/>
                        <TextField fx:id="registerUsernameField" promptText="Choose username" styleClass="custom-text-field"/>
                    </VBox>
                    
                    <VBox spacing="10">
                        <Label text="Password" styleClass="field-label"/>
                        <PasswordField fx:id="registerPasswordField" promptText="Choose password" styleClass="custom-text-field"/>
                    </VBox>
                    
                    <VBox spacing="10">
                        <Label text="Confirm Password" styleClass="field-label"/>
                        <PasswordField fx:id="confirmPasswordField" promptText="Re-enter password" styleClass="custom-text-field"/>
                    </VBox>
                    
                    <Label fx:id="registerErrorLabel" styleClass="error-label" wrapText="true"/>
                    
                    <Button text="Register" onAction="#handleRegister" styleClass="primary-button" prefWidth="200"/>
                    
                </VBox>
            </Tab>
            
        </TabPane>
        
    </VBox>
    
</StackPane>